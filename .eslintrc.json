{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    // "indent": ["error", 2, {"SwitchCase": 1}],
    "indent": ["error", 2, "tab"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
